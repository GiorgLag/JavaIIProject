<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <TextView android:id="@+id/simpleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back"
        android:textSize="25sp"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColor"/>

    <View
        android:id="@+id/divider"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@color/textColor"
        android:layout_below="@id/simpleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView android:id="@+id/simpleTextBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total cases: 0"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:textColor="@color/textColor"/>

    <Button
        android:id="@+id/buttontoweb"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/divider"
        android:layout_width="200dp"
        android:background="@color/textColor"
        android:text="Tap me for more info"
        android:layout_height="50dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_backround"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/masked_peopleicon"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_marginStart="170dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textSize="40sp"
            android:textColor="#F4F6FA"
            android:layout_gravity="start"
            android:layout_marginStart="70dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Important"
            android:textSize="40sp"
            android:textColor="#F4F6FA"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>


       </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomL"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:layout_above="@id/bottomCardView"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_backround"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomM"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:layout_toEndOf="@id/bottomL"
        android:layout_above="@id/bottomCardView"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_backround"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomR"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:layout_above="@id/bottomCardView"
        android:layout_toEndOf="@id/bottomM"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_backround"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/MiddleL"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:layout_above="@id/bottomL"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_backround"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/MiddleM"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:layout_above="@id/bottomM"
        android:layout_toEndOf="@id/MiddleL"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_backround"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/MiddleR"
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:layout_above="@id/bottomR"
        android:layout_toEndOf="@id/MiddleM"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_backround"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/symptomsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/MiddleM"
        android:layout_marginBottom="20dp"
        android:text="Symptoms"
        android:textColor="@color/textColor"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        />
    <View
        android:id="@+id/divider2"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@color/textColor"
        android:layout_above="@id/symptomsText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
</RelativeLayout>







