<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:id="@+id/item_image"
           android:layout_width="100dp"
           android:layout_height="150dp"
           android:src="@drawable/man_with_mask"
           android:layout_centerVertical="true"
           android:scaleType="fitCenter"
           android:layout_marginStart="15dp"/>

       <TextView
           android:id="@+id/id_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Id: "
           android:layout_toEndOf="@id/item_image"
           android:layout_marginTop="10dp"
           android:layout_marginStart="15dp" />

       <TextView
           android:id="@+id/name_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Full Name: "
           android:layout_toEndOf="@id/item_image"
           android:layout_below="@id/id_text"
           android:layout_alignStart="@id/id_text"/>

       <TextView
           android:id="@+id/phone_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Phone:"
           android:layout_toEndOf="@id/item_image"
           android:layout_below="@id/name_text"
           android:layout_alignStart="@id/id_text"/>

       <TextView
           android:id="@+id/residence_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Residence: "
           android:layout_toEndOf="@id/item_image"
           android:layout_below="@id/phone_text"
           android:layout_alignStart="@id/id_text"/>

       <TextView
           android:id="@+id/date_of_disease_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Date Of Disease: "
           android:layout_toEndOf="@id/item_image"
           android:layout_below="@id/residence_text"
           android:layout_alignStart="@id/id_text"/>

       <TextView
           android:id="@+id/gender_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Gender: "
           android:layout_toEndOf="@id/item_image"
           android:layout_below="@id/date_of_disease_text"
           android:layout_alignStart="@id/id_text"/>

       <TextView
           android:id="@+id/close_contact_with_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Close Contact With: "
           android:layout_toEndOf="@id/item_image"
           android:layout_below="@id/gender_text"
           android:layout_alignStart="@id/id_text"/>

       <TextView
           android:id="@+id/phones_of_close_contacts_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Phones Of Close Contacts: "
           android:layout_toEndOf="@id/item_image"
           android:layout_below="@id/close_contact_with_text"
           android:layout_alignStart="@id/id_text"/>

       <TextView
           android:id="@+id/age_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Age: "
           android:layout_toEndOf="@id/item_image"
           android:layout_below="@id/phones_of_close_contacts_text"
           android:layout_alignStart="@id/id_text"/>

       <TextView
           android:id="@+id/susceptible_text"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Susceptible: "
           android:layout_toEndOf="@id/item_image"
           android:layout_below="@id/age_text"
           android:layout_alignStart="@id/id_text"
           android:layout_marginBottom="10dp"/>
   </RelativeLayout>

</androidx.cardview.widget.CardView>